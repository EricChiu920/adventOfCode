{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "max-len":"off",
        "no-console":"off",
        "import/extensions": ["error", "ignorePackages", {"ts": "never", "tsx": "never"}],
        "linebreak-style": ["error", "windows"],
        "no-unused-vars": ["error", { "args": "after-used" }]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
